{
  "name": "preparr",
  "version": "1.0.0",
  "description": "A Docker sidecar that fully automates Servarr initialization - from deployment to ready-to-use instances with zero manual setup",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "servarr",
    "radarr",
    "sonarr",
    "docker",
    "sidecar",
    "automation",
    "kubernetes",
    "docker-compose",
    "iac",
    "infrastructure-as-code"
  ],
  "author": "Robbe Verhelst",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robbeverhelst/Preparr.git"
  },
  "bugs": {
    "url": "https://github.com/robbeverhelst/Preparr/issues"
  },
  "homepage": "https://github.com/robbeverhelst/Preparr#readme",
  "dependencies": {
    "tsarr": "^1.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
